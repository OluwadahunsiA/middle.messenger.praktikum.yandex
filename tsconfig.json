{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",

    "outDir": "dist",

    "typeRoots": ["node_modules/@types", "src/typings/app.d.ts"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
